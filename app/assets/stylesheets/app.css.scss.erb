.container{
  @include reset;
  margin: 10% auto;
  padding: 2%;
  width: 500px !important;
  border: 1px solid darken(#F2EEE1, 3%);
  background: tint(#F2EEE1, 50%);
  @include border-radius(5px);
}
.message-new{
  text-align: center;
  
  textarea{ 
    padding: 2%;
    width: 95%;
    height: 150px;
  }
}
.table th, .table td{
  border: none;
}

.error-label{
  label{
    color: #E01B5D;
  }
}
.wrapper-admin{
  h1{
    font-size: 18px;
    letter-spacing: -1px;
  }
  select{
    width: 10%;
  }
  textarea{
    height: 100px;
    width: 60%;
  }
  .actions{
    text-align: center;
  }
}

.footer{
  margin-top: 50px;
  padding-top: 10px;
  border-top: 1px dotted #ddd;
  text-align: center;
}