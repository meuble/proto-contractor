
$baseFontSize: 13px;

@import "twitter/bootstrap";
@import "twitter/bootstrap-responsive";
@import "bourbon";

$corail: #E67373;

@mixin reset{
  margin: 0;
  padding: 0;
}

@mixin font{
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
  text-shadow: 0 1px 1px rgba(255,255,255,.3);
  font-family: Ubuntu, "Helvetica Neue", Helvetica, Arial;
}
body, button, select, input, textarea{
  @include font;
}

body{
  background: tint(#F2EEE1, 20%);
}
a{
  color: #3078B3;
  font-weight: bold;
}
.btn img{ position: relative; top: -2px; left: -2px; }
.btn-fb, .btn-fb:hover,.btn-fb:focus, .btn-fb:active{
  background: #3B5998;
  color: #fff;
  @include box-shadow(none);
  border: 1px solid darken(#3B5998, 5%);
  @include linear-gradient(#3B5998, darken(#3B5998, 5%));
  text-shadow: 0 0 0;
}
.btn-fb:hover,.btn-fb:focus, .btn-fb:active{
  color: tint(#3B5998, 80%);
}
